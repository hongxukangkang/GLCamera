<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meitu.camera.ui.TakePictureActivity" >

    <LinearLayout
        android:id="@id/takePic_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="top|center" >

        <include
            android:id="@+id/header_view"
            layout="@layout/header" />
    </LinearLayout>

    <!-- <LinearLayout -->


    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="0.0dip" -->
    <!-- android:layout_weight="4.0" -->
    <!-- android:background="@color/blanchedalmond"> -->

    <RelativeLayout
        android:id="@id/surfaceView_container"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="10"
        android:background="@color/pink" >

        <com.meitu.glcamera.widgets.CameraSurfaceView
            android:id="@+id/pic_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@id/inflateView_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center" >

            <LinearLayout
                android:id="@id/inflateView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/grey"
                android:gravity="center_vertical"
                android:orientation="vertical" />
        </RelativeLayout>

        <!-- android:layout_alignParentLeft="true" -->
        <!-- android:layout_alignParentStart="true" -->
        <!-- <com.meitu.camera.widgets.DragFocusView2 -->
        <!-- android:clickable="true"  android:id="@id/dragfocusview" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:background="@color/pink"/> -->


        <!-- <LinearLayout -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:id="@+id/"> -->
        <!-- </LinearLayout> -->
    </RelativeLayout>
    <!-- </LinearLayout> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2.0px"
        android:background="@color/lightgray"
        android:orientation="vertical" />

    <!-- <com.meitu.camera.widgets.CameraFilterView -->
    <!-- android:id="@id/filterContainer" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="100.0dip" -->
    <!-- android:background="@color/blue" /> -->

    <LinearLayout
        android:id="@id/takePic_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grey"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/grey"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <include
                android:id="@id/bottom_view"
                layout="@layout/bottom" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>